<body>
    <div class="container-fluid">
        <header class="my-2 p-5 text-bg-dark text-center">
            <h1>Spring Boot App</h1>
        </header>

        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" th:href="@{/}">메인</a>
                <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" th:href="@{/post}">포스트</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" th:href="@{/post/create}">새 포스트</a>
                        </li>
                        <!-- 인증된 사용자 이면(로그인 된 상태이면) -->
                        <th:block sec:authorize="isAuthenticated()">
                            <li class="nav-item">
                                <!-- 로그인한 username를 표시 -->
                                <span sec:authentication="name"></span>
                                <a class="nav-link" th:href="@{/logout}">로그아웃</a>
                            </li>
                        </th:block>
                        
                        <!-- 익명 사용자 이면(로그인 하지 않은 상태이면) -->
                        <th:block sec:authorize="isAnonymous()">
                            <li>
                                <a class="nav-link" th:href="@{/login}">로그인</a>
                                <a class="nav-link" th:href="@{/signup}">회원가입</a>
                            </li>
                        </th:block>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- main 컨텐트가 삽입될 위치 -->
        <th:block layout:fragment="main"></th:block>
    </div>

